.cart {
  position: fixed;
  width: 100%;
  height: 178rpx;
  bottom: constant(safe-area-inset-bottom);
  bottom: env(safe-area-inset-bottom);
  background: #ffffff;
  box-shadow: 0px -3px 8px rgba(0, 0, 0, 0.04);
}

.cart .info {
  display: flex;
  margin-top: 24rpx;
  height: 42rpx;
  font-family: PingFang HK;
  font-style: normal;
  font-weight: normal;
  font-size: 24rpx;
  line-height: 28rpx;
  color: rgba(92, 53, 53, 0.65);
}

.cart .info .item-count {
  padding-left: 40rpx;
  width: 120rpx;
  height: 28rpx;
}

.cart .info .total-price {
  padding-left: 280rpx;
  width: 140rpx;
  height: 28rpx;
}

.cart .info .number {
  padding-left: 16rpx;
  padding-right: 40rpx;
  margin-top: -6rpx;
  height: 40rpx;
  font-weight: 500;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #EE4D2D;
}

.cart .icon image {
  padding-left: 26rpx;
  width: 702rpx;
  height: 86rpx;
}