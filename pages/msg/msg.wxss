/* pages/msg/msg.wxss */

.info {
  display: flex;
  flex-direction: row;
  margin-top: 80px;
  margin-left: 48px;
  width: 100%;
}

.info .t {
  width: 20px;
  height: 20px;
}

.info .content {
  margin-left: 10px;
  width: 112rpx;
  height: 70rpx;
  font-weight: 600;
  font-size: 28rpx;
  line-height: 40rpx;
  color: rgba(0, 0, 0, 0.87);
}

.face {
  display: flex;
  margin-top: 60rpx;
  width: 100%;
  height: 120rpx;
  font-family: PingFang HK;
  font-style: normal;
  margin-bottom: 28rpx;
}

.face .avatar image{
  padding-left: 24rpx;
  width: 80rpx;
  height: 80rpx;
}

.face .content {
  padding-left: 22rpx;
}

.face .content .name {
  width: 300rpx;
  height: 44rpx;
  font-weight: 600;
  font-size: 28rpx;
  line-height: 50rpx;
  color: rgba(0, 0, 0, 0.87);
}

.face .content .sign {
  width: 100%;
  height: 44rpx;
  margin-top: 4px;
  font-weight: normal;
  font-size: 24rpx;
  line-height: 34rpx;
  color: rgba(0, 0, 0, 0.54);
}