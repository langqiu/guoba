.wux-notice-bar {
  height: 62rpx;
  overflow: hidden;
  font-weight: normal;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #F69113;
  background: #FFF8E4;
  display: -ms-flexbox;
  display: flex;
}
.wux-notice-bar__icon {
  padding-left: 24rpx;
  padding-right: 8rpx;
  width: 32rpx;
  height: 32rpx;
}
.wux-notice-bar__action {
  width: 30rpx;
  height: 30rpx;
}
.wux-notice-bar__hd {
  display: -ms-flexbox;
  display: flex;
  -ms-flex-align: center;
  align-items: center
}
.wux-notice-bar__bd {
  margin-top: 16rpx;
  -ms-flex: 1;
  flex: 1;
  width: 100%;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}
.wux-notice-bar__marquee-container {
  overflow: hidden
}
.wux-notice-bar__marquee {
  position: relative;
  transform: translate3d(0,0,0);
  white-space: nowrap;
  display: inline-block
}
.wux-notice-bar__ft {
  display: -ms-flexbox;
  display: flex;
  -ms-flex-align: center;
  align-items: center
}